<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.NoActionBar"/>

    <style name="AppTheme.FullscreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/elevatedColorBackground</item>
        <item name="actionMenuTextColor">?android:attr/colorControlNormal</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:tint">?android:attr/colorControlNormal</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button.Negative</item>
    </style>

    <style name="AlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="BottomNavigation" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomNavigationStyle</item>
    </style>

    <style name="BottomNavigationStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

</resources>
